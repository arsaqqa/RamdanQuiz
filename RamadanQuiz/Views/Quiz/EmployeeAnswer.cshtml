@using RamadanQuiz.ViewModels
@model EmplyeeAnswerQuestionViewModel


<meta name="viewport" content="width=device-width, initial-scale=1" />

<link href="~/css/employeeanswer.css" rel="stylesheet" />

<div class="container py-5">

    <h2 class="text-center fw-bold mb-5 ">نتائج المسابقة</h2>

    @foreach (var correctAnswer in Model.correctAnswer)
    {
        var empAnswer = Model.employeeAnswer
        .FirstOrDefault(x => x.QuestionId == correctAnswer.QuestionId);

        bool isToday = correctAnswer.QuestionDate
        == DateOnly.FromDateTime(DateTime.Today);

        <div class="card shadow-sm border-0 rounded-4 mb-4">

            <div class="card-body p-4">

               
                <h6 class="fw-bold text-secondary mb-2">
                    @correctAnswer.QuestionDay
                </h6>

               
                <p class="fs-5 fw-semibold mb-3">
                    @correctAnswer.QuestionText
                </p>

                
                <div class="mb-3">
                    <span class="fw-bold">إجابتك:</span>
                    <span class="ms-2 @(empAnswer != null ? "text-dark" : "text-muted")">
                        @(empAnswer != null
                                            ? empAnswer.EmployeeQuestionOptionText
                                            : "لم تقم بإدخال إجابة لهذا السؤال")
                </span>
            </div>

            @if (!isToday)
                {
                    <!-- الإجابة الصحيحة -->
                    <div class="mb-3">
                        <span class="fw-bold text-success">
                            الإجابة الصحيحة:
                        </span>
                        <span class="ms-2 fw-semibold">
                            @correctAnswer.QuestionOptionText
                        </span>
                    </div>

                
                    @if (empAnswer != null &&
                                empAnswer.EmployeeQuestionOptionId
                                == correctAnswer.QuestionOptionID)
                    {
                        <div class="alert alert-success rounded-3 py-2 px-3 ">
                            ✔ إجابتك صحيحة 
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger rounded-3 py-2 px-3 ">
                            ❌ إجابتك خاطئة  
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning rounded-3 py-2 px-3 ">
                        ⏳ سيتم عرض الإجابة الصحيحة بعد انتهاء وقت السؤال
                    </div>
                }

            </div>
        </div>
    }

</div>




@if (TempData["SuccessMessage"] != null)
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["ErrorMsg"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}





@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var successEl = document.getElementById('successToast');
            if (successEl) {
                var successToast = new bootstrap.Toast(successEl);
                successToast.show();
            }

            var errorEl = document.getElementById('errorToast');
            if (errorEl) {
                var errorToast = new bootstrap.Toast(errorEl);
                errorToast.show();
            }
        });
    </script>

}



























