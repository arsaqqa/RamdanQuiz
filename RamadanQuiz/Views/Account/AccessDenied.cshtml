@{
    ViewData["Title"] = "Access Denied";
}

<div style="display:flex;align-items:center;justify-content:center;height:80vh;">
    <div style="text-align:center;padding:30px;border-radius:8px;background:#fff;box-shadow:0 10px 30px rgba(0,0,0,0.1);max-width:600px;width:100%">
        <h1>Access Denied</h1>
        <p>You do not have permission to access this resource.</p>
        @if (ViewData["ReturnUrl"] != null)
        {
            <p><a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewData["ReturnUrl"]">Sign in with another account</a></p>
        }
        else
        {
            <p><a asp-action="Login" asp-controller="Account">Sign in</a></p>
        }
    </div>
</div>
